<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_study_search"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_search"
        app:layout_constraintEnd_toStartOf="@id/tv_select_place_title"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/tv_select_place_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="스터디장소 선택"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_study_search"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_select_place_title">
        <TextView
            android:id="@+id/tv_place_value1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시/도"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tv_place_value2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:text="시/구/군"
            android:gravity="center"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tv_place_value3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:text="동/읍/면"
            android:gravity="center"
            android:textSize="20dp"/>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>