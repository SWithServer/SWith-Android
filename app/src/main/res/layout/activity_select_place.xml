<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/ib_back"
        android:layout_width="50dp"
        android:onClick="@{clickListener}"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_select_place_title"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        />

    <ImageView
        android:id="@+id/iv_study_search"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_search"
        app:layout_constraintStart_toEndOf="@id/tv_select_place_title"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/tv_select_place_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="스터디장소 선택"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ib_back"
        app:layout_constraintEnd_toStartOf="@id/iv_study_search"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/layout_place_values"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_select_place_title">
        <TextView
            android:id="@+id/tv_place_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시/도"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="60dp"
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tv_place_gu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:text="시/구/군"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tv_place_dong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구"
            android:visibility="invisible"
            android:layout_marginStart="30dp"
            android:textColor="@color/black"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout_place_values" >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_city"
            tools:listitem="@layout/item_location"
            android:layout_width="90dp"
            android:layout_height="500dp"
            android:layout_marginEnd="15dp"
            >
        </androidx.recyclerview.widget.RecyclerView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_gu"
            tools:listitem="@layout/item_location"
            android:visibility="invisible"
            android:layout_width="133dp"
            android:layout_height="500dp"
            android:layout_marginEnd="10dp"
            >
        </androidx.recyclerview.widget.RecyclerView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_dong"
            android:layout_width="130dp"
            android:layout_height="500dp"
            android:visibility="invisible"
            tools:listitem="@layout/item_location"></androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>