<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context = ".ui.study.manage.ManageStudyModifyActivity">
    <data>
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_manage_study_modify"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/layout_create_scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/btn_study_modify"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_manage_study_modify">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_create_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_image"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="@drawable/ic_create_plus"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <ImageView
                        android:id="@+id/iv_study_create"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/bg_create_sample"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        app:layout_constraintBottom_toTopOf="@id/layout_et_study_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/tv_study_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="스터디 제목"
                        android:textSize="14sp" />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_et_study_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_study_title"
                        android:background="@drawable/bg_round_gray">
                        <EditText
                            android:id="@+id/et_study_title"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_width="match_parent"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_height="44dp"
                            android:background="@drawable/bg_round_gray"
                            android:textColor="@color/black"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:textSize="12sp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/color_F1F1F1"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_create_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    >
                    <TextView
                        android:id="@+id/tv_study_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="시간"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_create_week"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_study_time"
                        android:background="@drawable/bg_round_gray">
                        <TextView
                            android:id="@+id/tv_study_week"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="주"
                            android:textSize="12sp"
                            android:textColor="@color/color_9F9F9F"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/et_study_week"
                            android:layout_marginStart="20dp" />
                        <EditText
                            android:id="@+id/et_study_week"
                            android:layout_width="28dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="7dp"
                            android:background="@drawable/bg_create_edit_grey"
                            android:enabled="false"
                            android:textSize="12sp"
                            android:inputType="number"
                            android:gravity="center"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/tv_study_week" />
                        <TextView
                            android:id="@+id/study_week_tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:textSize="12sp"
                            android:text="회"
                            android:textColor="@color/color_9F9F9F"
                            app:layout_constraintStart_toEndOf="@id/et_study_week" />
                        <CheckBox
                            android:id="@+id/check_week"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:button="@android:color/transparent"
                            android:background="@drawable/create_custom_checkbox"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginEnd="20dp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_create_month"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/layout_create_week"
                        android:background="@drawable/bg_round_gray">
                        <TextView
                            android:id="@+id/tv_study_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="월"
                            android:textSize="12sp"
                            android:textColor="@color/color_9F9F9F"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/et_study_month"
                            android:layout_marginStart="20dp" />
                        <EditText
                            android:id="@+id/et_study_month"
                            android:layout_width="28dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="7dp"
                            android:background="@drawable/bg_create_edit_grey"
                            android:enabled="false"
                            android:textSize="12sp"
                            android:inputType="number"
                            android:gravity="center"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/tv_study_month" />
                        <TextView
                            android:id="@+id/study_month_tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:textSize="12sp"
                            android:text="회"
                            android:textColor="@color/color_9F9F9F"
                            app:layout_constraintStart_toEndOf="@id/et_study_month" />
                        <CheckBox
                            android:id="@+id/check_month"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:button="@android:color/transparent"
                            android:background="@drawable/create_custom_checkbox"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginEnd="20dp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_create_free"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/layout_create_month"
                        android:background="@drawable/bg_round_gray">
                        <EditText
                            android:id="@+id/et_study_free"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="50dp"
                            android:background="@color/color_F1F1F1"
                            android:enabled="false"
                            android:textSize="12sp"
                            android:inputType="text"
                            android:hint="직접 입력해주세요"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <CheckBox
                            android:id="@+id/check_free"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:button="@android:color/transparent"
                            android:background="@drawable/create_custom_checkbox"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginEnd="20dp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/color_F1F1F1"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_create_online"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    >
                    <TextView
                        android:id="@+id/tv_study_online"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toTopOf="@id/layout_create_online_btn"
                        android:text="온/오프라인"
                        android:textSize="14sp" />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_create_online_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_study_online"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="10dp">
                        <CheckBox
                            android:id="@+id/btn_online"
                            app:layout_constraintHorizontal_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:button="@android:color/transparent"
                            android:background="@drawable/create_online_checkbox"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:text="온라인"
                            android:layout_marginEnd="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/btn_offline"/>
                        <CheckBox
                            android:id="@+id/btn_offline"
                            app:layout_constraintHorizontal_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:button="@android:color/transparent"
                            android:background="@drawable/create_online_checkbox"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:text="오프라인"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/btn_online"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/color_F1F1F1"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_create_region"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    >
                    <TextView
                        android:id="@+id/tv_study_region"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="장소"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toTopOf="@id/layout_create_region_btns"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_create_region_btns"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_study_region"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <Button
                            android:id="@+id/btn_plus_place1"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="36dp"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:layout_marginEnd="10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/btn_plus_place2"
                            style="?android:attr/borderlessButtonStyle"
                            android:background="@drawable/bg_create_skyblue"
                            android:text="+" />
                        <Button
                            android:id="@+id/btn_plus_place2"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="36dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/btn_plus_place1"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            style="?android:attr/borderlessButtonStyle"
                            android:background="@drawable/bg_create_skyblue"
                            android:text="+" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/line_region"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/color_F1F1F1"
                    app:layout_constraintTop_toTopOf="parent" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">
                    <TextView
                        android:id="@+id/tv_study_category"
                        app:layout_constraintBottom_toTopOf="@id/layout_spinner_category"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="분류"
                        android:textSize="14sp" />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_spinner_category"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_create_white_blue"
                        app:layout_constraintTop_toBottomOf="@id/tv_study_category"
                        >
                        <Spinner
                            android:id="@+id/spinner_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="20dp"
                            android:backgroundTint="@color/color_82B4FF"
                           />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/color_F1F1F1"
                    app:layout_constraintTop_toTopOf="parent" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">
                    <TextView
                        android:id="@+id/tv_study_detail_interest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/layout_et_study_detail"
                        android:text="세부주제"
                        android:textSize="14sp"
                        android:textColor="@color/black" />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_et_study_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_study_detail_interest"
                        android:background="@drawable/bg_create_white_blue">
                        <EditText
                            android:id="@+id/et_create_topic"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_width="match_parent"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_height="44dp"
                            android:background="@drawable/bg_create_white_blue"
                            android:textColor="@color/color_82B4FF"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:textSize="12sp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/color_F1F1F1"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">
                    <TextView
                        android:id="@+id/tv_study_people"
                        app:layout_constraintBottom_toTopOf="@id/layout_spinner_people"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="모집인원"
                        android:textSize="14sp" />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_spinner_people"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_create_white_blue"
                        app:layout_constraintTop_toBottomOf="@id/tv_study_people"
                        >
                        <Spinner
                            android:id="@+id/spinner_people"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="20dp"
                            android:backgroundTint="@color/color_82B4FF"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/color_F1F1F1"
                    app:layout_constraintTop_toTopOf="parent" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">
                    <TextView
                        android:id="@+id/tv_study_method"
                        app:layout_constraintBottom_toTopOf="@id/layout_spinner_method"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="모집방식"
                        android:textSize="14sp" />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_spinner_method"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_study_method"
                        >
                        <CheckBox
                            android:id="@+id/btn_application_ff"
                            app:layout_constraintHorizontal_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:button="@android:color/transparent"
                            android:background="@drawable/create_online_checkbox"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:text="선착순"
                            android:layout_marginEnd="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/btn_application_apply"/>
                        <CheckBox
                            android:id="@+id/btn_application_apply"
                            app:layout_constraintHorizontal_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:button="@android:color/transparent"
                            android:background="@drawable/create_online_checkbox"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:text="지원"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/btn_application_ff"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/color_F1F1F1"
                    app:layout_constraintTop_toTopOf="parent" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">
                    <TextView
                        android:id="@+id/tv_study_deadline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="모집기간"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textColor="@color/black" />
                    <LinearLayout
                        android:id="@+id/study_create_day_layout"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_study_deadline"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/bg_create_white_blue"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/ic_calendar_blue"
                            android:layout_gravity="center"/>
                        <TextView
                            android:id="@+id/btn_deadline"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:text="마감 날짜"
                            android:textColor="@color/color_82B4FF" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/color_F1F1F1"
                    app:layout_constraintTop_toTopOf="parent" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">
                    <TextView
                        android:id="@+id/tv_study_group_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="활동기간"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/study_create_playtime_layout"/>
                    <LinearLayout
                        android:id="@+id/study_create_playtime_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_study_group_time"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/bg_create_white_blue"
                            >
                            <ImageView
                                android:id="@+id/iv_study_startDay"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="20dp"
                                android:src="@drawable/ic_calendar_blue"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/btn_startDay"
                                android:layout_gravity="center"/>
                            <TextView
                                android:id="@+id/btn_startDay"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:elevation="3dp"
                                android:textSize="12sp"
                                android:layout_marginStart="10dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@id/iv_study_startDay"
                                android:text="시작 날짜"
                                android:textColor="@color/color_82B4FF"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_create_white_blue">
                            <ImageView
                                android:id="@+id/iv_study_finishDay"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="20dp"
                                android:src="@drawable/ic_calendar_blue"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/btn_finishDay"
                                android:layout_gravity="center"/>
                            <TextView
                                android:id="@+id/btn_finishDay"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:elevation="3dp"
                                android:textSize="12sp"
                                android:layout_marginStart="10dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@id/iv_study_finishDay"
                                android:text="마감 날짜"
                                android:textColor="@color/color_82B4FF" />


                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/color_F1F1F1"
                    app:layout_constraintTop_toTopOf="parent" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">
                    <TextView
                        android:id="@+id/tv_study_attend_time"
                        app:layout_constraintBottom_toTopOf="@+id/layout_spinner_attendtime"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="출석 유효시간"
                        android:textSize="14sp" />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_spinner_attendtime"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_create_white_blue"
                        app:layout_constraintTop_toBottomOf="@id/tv_study_attend_time"
                        >
                        <Spinner
                            android:id="@+id/spinner_attend_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="20dp"
                            android:backgroundTint="@color/color_82B4FF"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="6dp"
                    android:text="스터디 소개"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/et_study_content"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="12sp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/bg_create_gray"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:hint="텍스트 입력" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/btn_study_modify"
            android:layout_width="320dp"
            android:layout_height="44dp"
            android:text="수정완료"
            android:textColor="@color/white"
            android:background="@drawable/btn_round_blue_selector"
            app:layout_constraintTop_toBottomOf="@+id/layout_create_scroll"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:layout_marginBottom="10dp" />
        <FrameLayout
            android:id="@+id/fl_loading_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:clickable="true"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/toolbar_manage_study_modify"
            app:layout_constraintBottom_toBottomOf="parent">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="@color/color_swith"/>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>