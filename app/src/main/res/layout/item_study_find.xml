<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/study_drawable"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">
        <TextView
            android:id="@+id/study_title_tv"
            android:text="부천 인천 중급 영어 스터디(예시)"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_study_find_detail"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/study_drawable"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toTopOf="@id/layout_study_detail"
            app:layout_constraintTop_toBottomOf="@id/study_title_tv"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:id="@+id/tv_study_find_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="상세내용"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_study_find_detail_content"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/tv_study_find_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="부천, 인천에서 열심히 중급 영어 스터디 하실 분들을 모집합니다."
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_study_find_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/layout_study_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_horizontal|center_vertical"
            app:layout_constraintTop_toBottomOf="@id/layout_study_find_detail"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_study_detail_region"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:backgroundTint="@color/white"
                android:layout_marginRight="10dp"
                android:background="@drawable/study_drawable">
                <ImageView
                    android:id="@+id/iv_study_detail_region"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_region"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintEnd_toStartOf="@id/tv_study_detail_region"/>
                <TextView
                    android:id="@+id/tv_study_detail_region"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지역"
                    android:layout_marginRight="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_study_detail_region"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_study_detail_deadline"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:backgroundTint="@color/white"
                android:layout_marginRight="10dp"
                android:background="@drawable/study_drawable">
                <TextView
                    android:id="@+id/tv_study_detail_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="마감 D-2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_study_detail_recruitment"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:backgroundTint="@color/white"
                android:layout_marginRight="10dp"
                android:background="@drawable/study_drawable">
                <ImageView
                    android:id="@+id/iv_study_detail_recruitment"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_profile"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintEnd_toStartOf="@id/tv_study_detail_recruitment"/>
                <TextView
                    android:id="@+id/tv_study_detail_recruitment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="3/7"
                    app:layout_constraintStart_toEndOf="@id/iv_study_detail_recruitment"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>